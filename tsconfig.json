{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        // "noEmit": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",

        "test/**/*.ts",
        "index.d.ts",
        "global.d.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
